<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.newpath.LoginPage"
    android:background="@color/colorBackgroundForm"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.user.newpath.LoginPage"
        android:background="@color/colorBackgroundForm"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/imgLogoSup"
            android:layout_width="121dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/logo_sup_o_03"
            android:layout_marginLeft="28dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="28dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.021"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="207dp"
            android:layout_height="31dp"
            android:text="@string/text_welcome"
            android:textColor="@color/colorFontPrincipal"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.453" />

        <TextView
            android:id="@+id/txtMsgLogin"
            android:layout_width="231dp"
            android:layout_height="65dp"
            android:text="@string/text_loginPage"
            android:textColor="@color/colorFontSecondary"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/txtWelcome"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/txtWelcome"
            app:layout_constraintHorizontal_bias="0.031"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/colorFontPrincipal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMsgLogin"
            app:layout_constraintLeft_toLeftOf="@+id/txtMsgLogin"
            android:layout_marginLeft="5dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="281dp"
            android:layout_height="39dp"
            android:ems="10"
            android:textColor="@color/colorFontPrincipal"
            android:inputType="textEmailAddress"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.125"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textColor="@color/colorFontPrincipal"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginLeft="19dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="283dp"
            android:layout_height="47dp"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            app:layout_constraintRight_toRightOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.146"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="259dp"
            android:layout_height="48dp"
            android:background="@drawable/button_bg_radius"
            android:text="Login"
            android:textColor="@color/colorBackgroundForm"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText2"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/editText2"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="124dp"
            android:layout_height="21dp"
            android:text="@string/forgetPassword"
            android:textColor="@color/colorFontPrincipal"
            app:layout_constraintRight_toLeftOf="@+id/textView6"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText2"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:textColor="@color/colorFontPrincipal"
            android:layout_width="155dp"
            android:layout_height="0dp"
            android:text="@string/singUp"
            app:layout_constraintRight_toRightOf="@+id/editText2"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            android:layout_marginRight="0dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.22"
            tools:layout_editor_absoluteY="99dp"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
