<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.newpath.activity.RangeWheesLife"
    android:background="@color/colorBackgroundForm"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.user.newpath.activity.RangeWheesLife"
        android:background="@color/colorBackgroundForm">

        <TextView
            android:id="@+id/txt_financas"
            android:layout_width="31dp"
            android:layout_height="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/seek_financa"
            app:layout_constraintLeft_toRightOf="@+id/seek_financa"
            app:layout_constraintTop_toTopOf="@+id/seek_financa"
            android:textColor="@color/colorFontSecondary"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imgLogoSup"
            android:layout_width="121dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/logo_sup_o_03"
            android:layout_marginLeft="28dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="28dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.026"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:text="@string/rangeWheels"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:textSize="17sp"
            android:textColor="@color/colorFontPrincipal"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline6"
            app:layout_constraintRight_toLeftOf="@+id/guideline7"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="278dp"
            android:layout_height="111dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:text="@string/obsWheels"
            android:textColor="@color/colorFontSecondary"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintLeft_toLeftOf="@+id/textView10"
            app:layout_constraintRight_toRightOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personalGrowth"
            app:layout_constraintTop_toTopOf="@+id/seek_cres_pessoal"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/seek_cres_pessoal"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toLeftOf="@+id/seek_cres_pessoal"
            android:layout_marginRight="7dp"
            android:textColor="@color/colorFontPrincipal"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/business"
            app:layout_constraintBottom_toBottomOf="@+id/seek_financa"
            app:layout_constraintRight_toLeftOf="@+id/seek_financa"
            app:layout_constraintTop_toTopOf="@+id/seek_financa"
            app:layout_constraintVertical_bias="0.41000003"
            android:textColor="@color/colorFontPrincipal"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="7dp"
            android:text="@string/career"
            app:layout_constraintBottom_toBottomOf="@+id/seek_carreira"
            app:layout_constraintRight_toLeftOf="@+id/seek_carreira"
            android:textColor="@color/colorFontPrincipal"
            app:layout_constraintTop_toTopOf="@+id/seek_carreira"
            android:layout_marginTop="0dp"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="157dp"
            android:layout_height="16dp"
            android:text="@string/health"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/seek_saude"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/seek_saude"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/seek_saude"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.41000003"
            android:textColor="@color/colorFontPrincipal"/>


        <SeekBar
            android:id="@+id/seek_financa"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:max="10"
            android:progress="0"
            app:layout_constraintLeft_toLeftOf="@+id/seek_carreira"
            app:layout_constraintRight_toRightOf="@+id/seek_carreira"
            app:layout_constraintTop_toBottomOf="@+id/seek_carreira"
            android:progressTint="@color/colorFontPrincipal"
            android:thumb="@drawable/custom_thumb" />

        <SeekBar
            android:id="@+id/seek_saude"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:max="10"
            android:progress="0"
            app:layout_constraintLeft_toLeftOf="@+id/seek_financa"
            app:layout_constraintRight_toRightOf="@+id/seek_financa"
            app:layout_constraintTop_toBottomOf="@+id/seek_financa"
            android:progressTint="@color/colorFontPrincipal"
            android:thumb="@drawable/custom_thumb"
            />

        <SeekBar
            android:id="@+id/seek_social"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            android:max="10"
            android:progress="0"
            app:layout_constraintLeft_toLeftOf="@+id/seek_saude"
            app:layout_constraintRight_toRightOf="@+id/seek_saude"
            app:layout_constraintTop_toBottomOf="@+id/seek_saude"
            android:progressTint="@color/colorFontPrincipal"
            android:thumb="@drawable/custom_thumb"
            />

        <SeekBar
            android:id="@+id/seek_carreira"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:max="10"
            android:progress="0"
            app:layout_constraintLeft_toLeftOf="@+id/seek_cres_pessoal"
            app:layout_constraintRight_toRightOf="@+id/seek_cres_pessoal"
            app:layout_constraintTop_toBottomOf="@+id/seek_cres_pessoal"
            android:progressTint="@color/colorFontPrincipal"
            android:thumb="@drawable/custom_thumb"
            />

        <SeekBar
            android:id="@+id/seek_cres_pessoal"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="22dp"
            android:max="10"
            android:progress="0"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView11"
            app:layout_constraintRight_toRightOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:progressTint="@color/colorFontPrincipal"
            android:thumb="@drawable/custom_thumb" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/seek_social"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/seek_social"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/seek_social"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.41000003"
            android:textColor="@color/colorFontPrincipal"/>

        <TextView
            android:id="@+id/txt_crescimento"
            android:layout_width="31dp"
            android:layout_height="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/seek_cres_pessoal"
            app:layout_constraintLeft_toRightOf="@+id/seek_cres_pessoal"
            app:layout_constraintTop_toTopOf="@+id/seek_cres_pessoal"
            android:textColor="@color/colorFontSecondary"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_carreira"
            android:layout_width="31dp"
            android:layout_height="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/seek_carreira"
            app:layout_constraintLeft_toRightOf="@+id/seek_carreira"
            app:layout_constraintTop_toTopOf="@+id/seek_carreira"
            android:textColor="@color/colorFontSecondary"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_saude"
            android:layout_width="31dp"
            android:layout_height="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/seek_saude"
            app:layout_constraintLeft_toRightOf="@+id/seek_saude"
            app:layout_constraintTop_toTopOf="@+id/seek_saude"
            android:textColor="@color/colorFontSecondary"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_amigos"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:text="0"
            android:textColor="@color/colorFontSecondary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_saude"
            app:layout_constraintBottom_toBottomOf="@+id/seek_social"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/seek_social"
            android:layout_marginLeft="9dp"
            app:layout_constraintVertical_bias="0.956" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:layout_marginBottom="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_bg_radius"
            android:text="Continuar"
            android:textColor="@color/colorButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seek_social"
            app:layout_constraintVertical_bias="0.0" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.09" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline7"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.91" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
