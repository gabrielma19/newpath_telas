<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.newpath.activity.InitialPage"
    android:background="@drawable/background_fake"
    android:fillViewport="true"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.user.newpath.activity.InitialPage"
        android:background="@drawable/background_fake"
        >

    <Button
        android:id="@+id/btn_singUp"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:background="@drawable/button_bg_radius"
        android:text="Sing Up"
        android:textColor="@color/colorButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="89dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_loginFacebook"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:background="@drawable/button_bg_facebook"
        android:text="Login with Facebook"
        android:textColor="@color/colorButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_singUp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintVertical_bias="0.067" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="123dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/logo_sup_o_03"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.11" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="282dp"
        android:layout_height="121dp"
        android:text="@string/text_initalPage"
        android:textColor="@color/colorFontPrincipal"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_singUp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btn_singUp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        android:layout_marginTop="18dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />


</android.support.constraint.ConstraintLayout>
</ScrollView>
